<h1 class="text-center my-5">Login</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_tag '/login', class: "form" do %>

            <div class="form-group mb-3">
              <%= label_tag :email, "Email", class: "form-label" %>
              <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter your email" %>
            </div>

            <div class="form-group mb-3">
              <%= label_tag :password, "Password", class: "form-label" %>
              <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter your password" %>
            </div>

            <div class="d-grid gap-2">
              <%= submit_tag "Login", class: "btn btn-primary btn-block" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
